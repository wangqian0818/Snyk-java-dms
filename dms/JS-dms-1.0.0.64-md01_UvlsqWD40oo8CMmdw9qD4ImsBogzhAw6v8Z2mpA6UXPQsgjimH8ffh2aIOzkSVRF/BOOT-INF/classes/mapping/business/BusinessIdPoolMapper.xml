<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zx.dms.database.business.mapper.BusinessIdPoolMapper">
  <resultMap id="BaseResultMap" type="com.zx.dms.database.business.model.BusinessIdPool">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="type" jdbcType="TINYINT" property="type" />
    <result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate" />
  </resultMap>
  <sql id="Base_Column_List">
    id, type, gmt_create
  </sql>
  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from business_id_pool
    where id = #{id,jdbcType=BIGINT}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
    delete from business_id_pool
    where id = #{id,jdbcType=BIGINT}
  </delete>
  <insert id="insert" parameterType="com.zx.dms.database.business.model.BusinessIdPool">
    <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Long">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into business_id_pool (type, gmt_create)
    values (#{type,jdbcType=TINYINT}, #{gmtCreate,jdbcType=TIMESTAMP})
  </insert>
  
  <select id="getPortForNodeBusi" resultType="java.lang.Integer">
  	 SELECT socket_port dport from trans_busi_file
	 UNION
	 SELECT socket_port dport from trans_busi_db
	 UNION
	 SELECT port dport from trans_busi_data
	 UNION
	 SELECT local_proxy_port dport from trans_busi_data
	  UNION
	 SELECT local_feedback_port dport from trans_busi_data
	 ORDER BY dport asc
  </select>
</mapper>